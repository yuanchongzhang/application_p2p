<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorMainBlue"
        android:tag="(0,100)">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:tag="(0,0,32)"
            android:text="修改昵称"
            android:textColor="@color/colorWhite"
            tools:textSize="32px" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="64px"
            android:layout_height="78px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:onClick="onBack"
            android:src="@mipmap/ic_action_back"
            android:tag="[20,20,20,20](64,78)"
            android:visibility="visible"
            tools:padding="20px" />

        <TextView
            android:id="@+id/text_finish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="完成"

            android:textColor="@color/colorWhite" />


    </RelativeLayout>

    <EditText
        android:id="@+id/et_01"
        android:layout_width="match_parent"
        android:layout_height="80px"

        android:layout_marginLeft="22px"
        android:layout_marginRight="22px"
        android:background="@drawable/shape_juxing_nicheng"
        android:gravity="center_vertical|left"
        android:hint="请输入4~10位的昵称"
        android:maxLength="11"
        android:singleLine="true"
        android:paddingLeft="10px"
        android:tag="{22,20,22,0}(0,80,29)[32,0,32,0]"
        android:textColorHint="@color/colorTextHint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4-10个字，可由中文、英文、数字组成"
        android:layout_marginLeft="28px"
        android:layout_marginTop="20px"
        android:tag="(0,0,24){28,20,0,0}"
        android:textColor="#898989"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:tag="{0,30,0,0}(0,90)">


        <!--
                <EditText
                    android:id="@+id/et_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical|left"
                    android:hint="请输入4~10位的昵称"

                    android:maxLength="11"
                    android:singleLine="true"
                    android:tag="{107,0,0,0}(29)"
                    android:textColorHint="@color/colorTextHint" />-->
    </LinearLayout>
</LinearLayout>