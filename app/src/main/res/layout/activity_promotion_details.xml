<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activity.PromotionDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorMainBlue"
        android:tag="(0,100)">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:tag="(0,0,32)"
            android:text="@string/pd_title"
            android:textColor="@color/colorWhite"
            tools:textSize="32px" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="64px"
            android:layout_height="78px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:onClick="onBack"
            android:src="@mipmap/ic_action_back"
            android:tag="[20,20,20,20](64,78)"
            android:visibility="visible"
            tools:padding="20px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75px"
            android:background="@color/colorThirdBgGrey"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:tag="(0,75)">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:tag="{25,0,0,0}(0,0,26)"
                android:text="截至 2016-03-08 15:56:48"
                android:textColor="@color/colorBlack"
                android:textSize="26px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:tag="{25,0,0,0}(0,0,26)"
                android:text="@string/pd_01"
                android:textColor="@color/colorBlack"
                android:textSize="26px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82px"
            android:orientation="horizontal"
            android:tag="(0,82)">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="(0,0)"
                android:text="会员名单"
                android:textColor="#585858"
                android:textSize="28px" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="(0,0)"
                android:text="注册时间"
                android:textColor="#585858"
                android:textSize="28px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e4e4e4" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_02_item_view">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75px"
            android:background="@color/colorThirdBgGrey"
            android:gravity="center_vertical"
            android:tag="(0,75)">

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:tag="{25,0,0,0}(0,0,26)"
                android:text="截至 2016-03-08 15:56:48"
                android:textColor="@color/colorBlack"
                android:textSize="26px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:tag="{25,0,0,0}(0,0,26)"
                android:text="@string/pd_02"
                android:textColor="@color/colorBlack"
                android:textSize="26px" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82px"
            android:orientation="horizontal"
            android:tag="(0,82)">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="(0,0)"
                android:text="会员名单"
                android:textColor="#585858"
                android:textSize="28px" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="(0,0)"
                android:text="奖金贡献"
                android:textColor="#585858"
                android:textSize="28px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e4e4e4" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_02_item_view"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>