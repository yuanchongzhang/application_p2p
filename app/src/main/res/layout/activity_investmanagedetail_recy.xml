<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".activity.AccountManagementActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorMainBlue"
        android:tag="(0,100)">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:tag="(0,0,32)"
            android:text="详情"
            android:textColor="@color/colorWhite"
            tools:textSize="32px" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="64px"
            android:layout_height="78px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:onClick="onBack"
            android:src="@mipmap/ic_action_back"
            android:tag="[20,20,20,20](64,78)"
            android:visibility="visible"
            tools:padding="20px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82px"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="33px"
        android:paddingRight="33px"
        android:tag="(0,82)[33,0,33,0]">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,28)"
            android:text="应收日期"
            android:textColor="#585858"

            android:textSize="28px"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,28)"
            android:text="应收本金"
            android:textColor="#585858"
            android:textSize="31px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,28)"
            android:text="应收利息"
            android:textColor="#585858"
            android:textSize="31px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,28)"
            android:text="应收手续费"
            android:textColor="#585858"
            android:textSize="31px" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E2E2E2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82px"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="33px"
        android:paddingRight="33px"
        android:tag="(0,82)[33,0,33,0]">

        <TextView
            android:id="@+id/account_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,26)"
            android:text="2015.12.11"

            android:textColor="#868686"
            android:textSize="26px" />

        <TextView
            android:id="@+id/account_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,26)"
            android:text="573.00"
            android:textColor="#868686"
            android:textSize="26px" />

        <TextView
            android:id="@+id/account_Interest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,26)"
            android:text="60.00"
            android:textColor="#868686"
            android:textSize="26px" />

        <TextView
            android:id="@+id/account_shouxufei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,26)"
            android:text="0.00"
            android:textColor="#868686"

            android:textSize="26px" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82px"
        android:layout_marginTop="20px"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="33px"
        android:paddingRight="33px"
        android:tag="(0,82)[33,0,33,0]{0,20,0,0}">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,28)"
            android:text="实收本息"

            android:textColor="#585858"
            android:textSize="31px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,28)"
            android:text="应收本息"
            android:textColor="#585858"
            android:textSize="31px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,28)"
            android:text="收款状态"
            android:textColor="#585858"
            android:textSize="31px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="(0,0,28){10,0,0,0}"
                android:text="当前/总"
                android:textColor="#585858"
                android:textSize="31px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="(0,0,20)"
                android:text="（期）"
                android:textColor="#868686"

                android:textSize="20px" />
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E2E2E2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82px"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="33px"
        android:paddingRight="33px"
        android:tag="(0,82)[33,0,33,0]">

        <TextView
            android:id="@+id/shiji_benxi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,26)"
            android:text="0"

            android:textColor="#868686"
            android:textSize="26px" />

        <TextView
            android:id="@+id/yingshou_benxi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,26)"
            android:text="573.00"
            android:textColor="#868686"
            android:textSize="26px" />

        <TextView
            android:id="@+id/shiji_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,26)"
            android:text="逾期未还"
            android:textColor="#868686"
            android:textSize="26px" />

        <TextView
            android:id="@+id/shiji_countbi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,0,31)"
            android:text="0/1"
            android:textColor="#868686"
            android:textSize="26px" />

    </LinearLayout>

</LinearLayout>
