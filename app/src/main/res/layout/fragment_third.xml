<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6"
    tools:context="com.haiying.p2papp.fragment.ThirdFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorMainBlue"
        android:tag="(0,100)">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:tag="(0,0,32)"
            android:text="@string/main_03_title_01"
            android:textColor="@color/colorWhite"
            tools:textSize="32px" />

        <ImageView
            android:id="@+id/iv_back"
            android:visibility="gone"
            android:layout_width="24px"
            android:layout_height="38px"
            android:contentDescription="@string/app_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_action_back"
            android:tag="{20,0,0,0}(24,38)"
            tools:layout_marginLeft="20px" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"

        android:tag="(0,69){0,0,0,0}">

        <LinearLayout
            android:id="@+id/ll_sp_1"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="(0,70)"
            >

            <TextView
                android:id="@+id/tv_sp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="(27)"
                android:text="@string/main_02_chose_01"
                android:textColor="@color/greyText" />

            <ImageView
                android:id="@+id/iv_sp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_action_downarrow_blue"
                android:tag="(18,12){10,0,0,0}" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/ll_sp_2"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_weight="1"
            android:tag="(0,70)"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_sp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="(27)"
                android:text="@string/main_02_chose_02"
                android:textColor="@color/greyText" />

            <ImageView
                android:id="@+id/iv_sp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_action_downarrow_blue"
                android:tag="(18,12){10,0,0,0}" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/ll_sp_3"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_weight="1"
            android:tag="(0,70)"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_sp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="(27)"
                android:text="价格"
                android:textColor="@color/greyText" />
          <!--  android:text="@string/main_02_chose_04"-->
            <ImageView
                android:id="@+id/iv_sp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_action_downarrow_blue"
                android:tag="(18,12){10,0,0,0}" />

        </LinearLayout>


        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/ll_sp_4"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_weight="1"
            android:tag="(0,70)"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_sp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="(27)"
                android:text="@string/main_02_chose_03"
                android:textColor="@color/greyText" />

            <ImageView
                android:id="@+id/iv_sp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_action_downarrow_blue"
                android:tag="(18,12){10,0,0,0}" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/sp_01"
            android:layout_width="match_parent"

            android:spinnerMode="dropdown"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            />
        <Spinner
            android:id="@+id/sp_02"
            android:layout_width="match_parent"

            android:spinnerMode="dropdown"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            />
        <Spinner
            android:id="@+id/sp_03"
            android:layout_width="match_parent"

            android:spinnerMode="dropdown"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            />
        <Spinner
            android:id="@+id/sp_04"
            android:layout_width="match_parent"

            android:spinnerMode="dropdown"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <in.srain.cube.views.ptr.PtrFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/store_house_ptr_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="300"
        cube_ptr:ptr_duration_to_close_header="2000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <android.support.v7.widget.RecyclerView
            android:tag="[0,20,0,0]{9,0,9,0}(0,0)"
            android:id="@+id/rv_01"
            tools:layout_marginTop="20px"
            android:clipToPadding="false"
            android:layout_marginLeft="9px"
            android:layout_marginRight="9px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_01_item_view">
        </android.support.v7.widget.RecyclerView>
    </in.srain.cube.views.ptr.PtrFrameLayout>
</LinearLayout>
