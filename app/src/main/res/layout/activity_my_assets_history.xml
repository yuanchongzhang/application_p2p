<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".activity.MyAssetsHistoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorMainBlue"
        android:tag="(0,100)">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:tag="(0,0,32)"
            android:text="@string/mah_title"
            android:textColor="@color/colorWhite"
            tools:textSize="32px" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="64px"
            android:layout_height="78px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:onClick="onBack"
            android:src="@mipmap/ic_action_back"
            android:tag="[20,20,20,20](64,78)"
            android:visibility="visible"
            tools:padding="20px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380px"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:tag="(0,380)">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_marginTop="5px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:tag="{0,5,0,0}(0,88)">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:tag="{20,0,0,0}(0,0,26)"
                android:text="事件类型："
                android:textColor="#585858" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_marginLeft="22px"
                android:layout_marginRight="25px"
                android:orientation="vertical"
                android:tag="{22,0,25,0}(0,78)">

                <LinearLayout
                    android:id="@+id/shijian_layout"
                    android:layout_width="match_parent"
                    android:layout_height="72px"
                    android:layout_marginRight="10px"
                    android:background="#F6F6F6"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:tag="(0,72){0,0,10,0}">

                    <TextView
                        android:id="@+id/et_01"
                        android:layout_width="0px"
                        android:layout_height="72px"
                        android:layout_weight="1"
                        android:background="#F6F6F6"
                        android:gravity="center_vertical"
                        android:paddingLeft="27px"
                        android:tag="(537,72,26)"
                        android:text="--请选择类型--"

                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40px"
                        android:layout_marginRight="20px"
                        android:background="#D2D2D2"
                        android:tag="(0,40){0,0,40,0}"

                        />

                    <ImageView
                        android:layout_width="22px"
                        android:layout_height="15px"
                        android:layout_marginRight="25px"
                        android:src="@mipmap/arrow_down_zichan"
                        android:tag="(22,15){0,0,25,0}" />

                </LinearLayout>


                <Spinner
                    android:id="@+id/sp_01"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="36px"
                android:layout_height="37px"
                android:layout_marginLeft="17px"
                android:src="@mipmap/ic_action_downarrow_blue"
                android:tag="{17,0,0,0}(36,37)"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="24px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:tag="(0,88){0,24,0,0}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:tag="{20,0,0,0}(0,0,26)"
                android:text="时间从："
                android:layout_gravity="center_vertical"
                android:textColor="#585858" />

            <TextView
                android:id="@+id/et_02"
                android:layout_width="225px"
                android:layout_height="68px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22px"
                android:layout_marginRight="0px"
                android:background="#F6F6F6"
                android:drawableRight="@mipmap/rili_pic_2"
                android:gravity="center"
                android:paddingRight="25px"

                android:tag="{22,0,0,0}(225,68,26)[0,0,25,0]" />

            <ImageView
                android:id="@+id/iv_02"
                android:layout_width="36px"
                android:layout_height="37px"
                android:layout_marginLeft="17px"
                android:src="@mipmap/ic_action_downarrow_blue"
                android:tag="{17,0,0,0}(36,37)"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:tag="{20,0,0,0}(0,0,26)"
                android:text="至："
                android:textColor="#585858" />


            <TextView
                android:id="@+id/et_03"
                android:layout_width="225px"
                android:layout_height="68px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17px"
                android:layout_marginRight="45px"
                android:background="#F6F6F6"
                android:drawableRight="@mipmap/rili_pic_2"
                android:gravity="center"
                android:paddingRight="25px"

                android:tag="{17,0,45,0}(225,68,26)[0,0,25,0]" />

            <ImageView
                android:id="@+id/iv_03"
                android:layout_width="36px"
                android:layout_height="37px"
                android:layout_marginLeft="17px"
                android:src="@mipmap/ic_action_downarrow_blue"
                android:tag="{17,0,0,0}(36,37)"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_01"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="85px"
            android:layout_marginRight="85px"
            android:layout_marginTop="55px"
            android:background="@drawable/selector_bg_main_04_bt"
            android:tag="{85,55,85,25}(0,80,32)"
            android:text="@string/mm_08"
            android:textColor="@color/colorWhite"
            android:textSize="32px" />


    </LinearLayout>


    <in.srain.cube.views.ptr.PtrFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/store_house_ptr_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="300"
        cube_ptr:ptr_duration_to_close_header="2000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6F6F6"
            android:clipToPadding="false"
            android:tag="[0,20,0,0](0,0)"

            tools:layout_marginTop="20px"
            tools:listitem="@layout/list_01_item_view"></android.support.v7.widget.RecyclerView>
    </in.srain.cube.views.ptr.PtrFrameLayout>


</LinearLayout>