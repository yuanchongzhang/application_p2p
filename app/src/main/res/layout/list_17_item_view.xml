<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="146px"
    android:orientation="vertical"
    android:tag="(0,146)">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:tag="(0,145)">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_logo"
            android:layout_width="66px"
            android:layout_height="66px"
            android:layout_marginLeft="44px"
            android:src="@mipmap/logo_boc"
            android:tag="{44,0,0,0}(66,66)"
            />
        <TextView
            android:id="@+id/tv_name"
            android:tag="{25,0,0,0}(0,0,30)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="银行名称"
            android:textColor="#353535"
            android:textSize="30px"
            android:layout_marginLeft="25px"/>
        <TextView
            android:id="@+id/tv_id"
            android:tag="{0,0,20,0}(0,0,26)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6000 3000 1254 2541"
            android:textColor="#353535"
            android:textSize="30px"
            android:visibility="gone"
            android:layout_marginRight="20px"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"

        android:background="@color/colorGreydividingline2"
        android:tag="{0,0,0,0}(0,1)" />
</LinearLayout>